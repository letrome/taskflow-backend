meta {
  name: Get task
  type: http
  seq: 2
}

get {
  url: {{baseurl}}/tasks/{{invalid_task_id}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 404
  res.body.status: eq error
  res.body.message: eq Task not found
}

script:pre-request {
  const now = new Date();
  bru.setVar("due_date", `${now}`);
  bru.setVar("invalid_task_id","696ffb75112147855c5eb120")
}

settings {
  encodeUrl: true
  timeout: 0
}
