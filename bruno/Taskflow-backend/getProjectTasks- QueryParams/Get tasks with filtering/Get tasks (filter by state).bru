meta {
  name: Get tasks (filter by state)
  type: http
  seq: 3
}

get {
  url: {{baseurl}}/projects/{{project_id}}/tasks?state=OPEN
  body: none
  auth: bearer
}

params:query {
  state: OPEN
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
}

assert {
  res.status: eq 200
  res.body: isArray
  res.body[0].id: eq {{task_id_1}}
  res.body[1].id: eq {{task_id_4}}
  res.body[2].id: eq {{task_id_7}}
}

settings {
  encodeUrl: true
  timeout: 0
}
