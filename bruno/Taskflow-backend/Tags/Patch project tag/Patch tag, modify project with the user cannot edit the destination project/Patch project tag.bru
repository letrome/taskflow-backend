meta {
  name: Patch project tag
  type: http
  seq: 7
}

patch {
  url: {{baseurl}}/tags/{{tag_id}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "name": "Tag_modified",
    "project": "{{project_id_2}}"
  }
}

assert {
  res.status: eq 404
  res.body.status: eq error
  res.body.message: eq Project not found
}

script:post-response {
  bru.setVar("tag_id_1", res.body.id);
}

settings {
  encodeUrl: true
  timeout: 0
}
