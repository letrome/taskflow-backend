meta {
  name: Login (3)
  type: http
  seq: 5
}

post {
  url: {{baseurl}}/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email": "{{unique_email}}",
    "password": "{{new_password}}"
  }
}

assert {
  res.status: eq 200
  res.body.token: isString
  res.body.expires_in: eq 86400 seconds
}

script:post-response {
  bru.setVar("token", res.body.token);
}

settings {
  encodeUrl: true
  timeout: 0
}
