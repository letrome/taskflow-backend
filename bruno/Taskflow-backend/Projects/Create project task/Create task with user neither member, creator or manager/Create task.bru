meta {
  name: Create task
  type: http
  seq: 4
}

post {
  url: {{baseurl}}/projects/{{project_id}}/tasks
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "title": "Task title",
    "description": "Task description"
  }
}

assert {
  res.status: eq 404
  res.body.status: eq error
  res.body.message: eq Project not found
}

settings {
  encodeUrl: true
  timeout: 0
}
