meta {
  name: Add task tag
  type: http
  seq: 1
}

post {
  url: {{baseurl}}/tasks/{{task_id}}/tags/{{tag_id}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{invalid_token}}
}

assert {
  res.status: eq 401
  res.body.status: eq error
  res.body.message: eq Unauthorized
}

script:pre-request {
  bru.setVar("invalid_token", "invalid");
}

settings {
  encodeUrl: true
  timeout: 0
}
