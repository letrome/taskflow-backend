meta {
  name: Update password
  type: http
  seq: 1
}

put {
  url: {{baseurl}}/users/me/password
  body: json
  auth: bearer
}

auth:bearer {
  token: {{invalid_token}}
}

body:json {
  {
    "old_password": "{{old_password}}",
    "new_password": "{{new_password}}"
  }
}

assert {
  res.status: eq 401
  res.body.status: eq error
  res.body.message: eq Unauthorized
}

script:pre-request {
  bru.setVar("invalid_token","invalid")
  const uuid = require("uuid").v4()
  bru.setVar("unique_email", `${uuid}@example.com`);
  bru.setVar("old_password", `${uuid}`);
  const uuid2 = require("uuid").v4()
  bru.setVar("new_password", `${uuid2}`);
}

settings {
  encodeUrl: true
  timeout: 0
}
