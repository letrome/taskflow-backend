meta {
  name: Get project by id
  type: http
  seq: 4
}

get {
  url: {{baseurl}}/projects/{{project_id}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 404
  res.body.status: eq error
  res.body.message: eq Project not found
}

script:pre-request {
  const randomId = Math.floor(Math.random() * 1000000);
  bru.setVar("non_existing_project_id", `${randomId}`);
}

settings {
  encodeUrl: true
  timeout: 0
}
