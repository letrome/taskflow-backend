meta {
  name: Update me
  type: http
  seq: 1
}

put {
  url: {{baseurl}}/users/me
  body: json
  auth: bearer
}

auth:bearer {
  token: {{invalid_token}}
}

body:json {
  {
    "first_name": "John",
    "last_name": "Doe"
  }
}

assert {
  res.status: eq 401
  res.body.status: eq error
  res.body.message: eq Unauthorized
}

